<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/backgroundCard"
        android:layoutDirection="ltr"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="0dp"

        app:cardCornerRadius="@dimen/roundedImageRadius"
        app:cardBackgroundColor="?attr/boxItemBackground"
        android:clickable="true"
        android:focusable="true">
    <!-- USING CROP RATIO (182/268), centerCrop for fill -->

    <androidx.cardview.widget.CardView
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/roundedImageRadius"
            android:layout_width="67.5dp"
            android:layout_height="match_parent">

        <ImageView
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_gravity="left"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:ignore="RtlHardcoded"
                android:contentDescription="@string/poster_open_source_descript" />
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.ContentLoadingProgressBar
            android:indeterminate="true"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:progressBackgroundTint="?attr/colorPrimary"
            android:layout_gravity="bottom"
            android:indeterminateTint="?attr/colorPrimary"
            android:id="@+id/download_progressbar"
            android:layout_width="match_parent"
            tools:progress="10"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="4dp"
            android:progressTint="?attr/colorPrimary"
            android:layout_height="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/download_open_btt"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="77.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"

                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/download_holder">

            <TextView
                    tools:text="Overgeareddjadjakdjakldjajdaldjadjal\ndadwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textColor="?attr/textColor"
                    android:id="@+id/imageText"
                    android:ellipsize="end"
                    android:maxLines="2" />

            <TextView
                    android:id="@+id/download_progress_text"

                    android:layout_marginTop="1dp"
                    android:gravity="start"
                    tools:text="1034/1960 - Paused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="?attr/grayTextColor"
                    android:maxLines="3" />
        </LinearLayout>

        <FrameLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/download_holder">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="match_parent">

                <FrameLayout
                        android:id="@+id/download_update_holder"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                    <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/download_update_loading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:foregroundTint="@color/white"
                            android:progressTint="@color/white"
                            android:layout_gravity="center" />

                    <ImageView
                            android:id="@+id/download_update"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_baseline_autorenew_24"
                            android:padding="10dp"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|center_vertical"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            app:tint="?attr/textColor" />
                </FrameLayout>


                <ImageView
                        android:visibility="gone"
                        android:id="@+id/download_delete_trash"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_baseline_delete_outline_24"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="5dp"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:contentDescription="@string/delete"
                        app:tint="?attr/textColor" />
            </LinearLayout>

            <TextView
                    tools:text="+27  "
                    android:layout_marginEnd="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"

                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/imageTextMore"
                    android:ellipsize="end"
                    android:maxLines="1" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"

            app:tint="?attr/textColor"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_baseline_more_vert_24"
    >

    </ImageView>-->
</androidx.cardview.widget.CardView>
